<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".fragments.AccountBottomSheetFragment">

    <RelativeLayout
        android:id="@+id/category_edit_rel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/edit_category_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_outline_settings_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="24dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/bottom_sheet_edit_cat"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/edit_category_btn"
            android:text="@string/edit" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/category_transfer_rel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/transfer_category_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_outline_transaction_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="24dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/bottom_sheet_transfer_cat"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/transfer_category_btn"
            android:text="@string/transfer" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/category_delete_rel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_category_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_outline_delete_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="24dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/bottom_sheet_delete_cat"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/delete_category_btn"
            android:text="@string/delete" />

    </RelativeLayout>


</FrameLayout>